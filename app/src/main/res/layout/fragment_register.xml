<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio.RegisterFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/logo"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="110dp"
            android:hint="@string/nombre_de_usuario"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="60dp"
            android:hint="@string/contrasena"
            android:password="true"
            android:singleLine="true"
            tools:ignore="Deprecated" />

        <CheckBox
            android:id="@+id/chkMostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="60dp"
            android:pointerIcon="arrow"
            android:text="@string/mostrar" />


        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/correo"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="160dp"
            android:hint="@string/descripcion" />

        <ImageView
            android:id="@+id/ivPerfil"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/pic_icon"
            android:contentDescription="@string/perfil" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="350dp"
            android:text="@string/imagen_perfil"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="260dp"
            android:text="@string/sexo"
            android:textSize="17sp" />

        <Spinner
            android:id="@+id/spinnerSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="10dp"
            android:entries="@array/sexos" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="410dp"
            android:text="@string/registrarse" />

        <TextView
            android:id="@+id/txtISesion"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="130dp"
            android:layout_marginTop="460dp"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:text="@string/iniciaSesion"
            android:textAlignment="center"
            android:textStyle="" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>